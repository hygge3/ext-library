        <module>ext-mail</module>
        <module>ext-monitor</module>
        <module>ext-mybatis</module>
        <module>ext-openapi</module>
        <module>ext-qrcode</module>
        <module>ext-ratelimiter</module>
        <module>ext-satoken</module>
        <module>ext-sse</module>
