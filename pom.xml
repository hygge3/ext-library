    <modelVersion>4.0.0</modelVersion>

    <groupId>ext.library</groupId>
    <artifactId>ext-parent</artifactId>
    <name>ext-parent</name>
    <version>${revision}</version>
    <packaging>pom</packaging>
    <description>Parent</description>
    <url>https://hygge.eu.org</url>

    <modules>
        <module>ext-tool</module>
        <module>ext-core</module>
        <module>ext-json</module>
        <module>ext-redis</module>
        <module>ext-cache</module>
        <module>ext-security</module>
        <module>ext-captcha</module>
        <module>ext-crypto</module>
        <module>ext-desensitize</module>
        <module>ext-interface-crypto</module>
        <module>ext-holidays</module>
        <module>ext-http</module>
